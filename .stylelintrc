{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "include",
        "mixin",
        "if",
        "else",
        "function",
        "return",
        "for"
      ]
    }],
    "declaration-empty-line-before": "never",
    "function-calc-no-invalid": null,
    "indentation": 2,
    "no-descending-specificity": null,
    "no-eol-whitespace": [
      true,
      {
        "ignore": ["empty-lines"]
      }
    ]
  }
}
